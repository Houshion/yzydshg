@import '/css/main.wxss';
.search_header{
    height: 60px;
}
.search_img{
    width: 31rpx;
    height: 34rpx;
}
.search_box{
    border: 1px solid #e5e5e5;
    border-radius: 44rpx;
}
.tab_box{
    height: 55px;
}
.swiper-tab {
    display: flex;
    align-items: center;
    width: 100%;
    height: 45px;
    background: #fff;
}

.swiper-tab-list {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    box-sizing: border-box;
    background:#fff;
    color:#999;
    position: relative;
}
.on {
    color:#ffcc00;
}
.on::after{
    display: inline-block;
    content: '';
    width: 50rpx;
    height: 10rpx;
    background:#ffcc00;
    position: absolute;
    left: 50%;
    margin-left: -25rpx;
    border-radius: 40rpx;
    bottom: 0;
}
.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow-y: scroll;
    padding-top: 55px;
}
.add_goods_btn{
    width: 130rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 44rpx;
    text-align: center;
}
.goods_logo_box{
    width: 120rpx;
    height: 120rpx;
    background-color: #fafafa;
}
.goods_logo_box image{
    width: 120rpx;
    height: 120rpx;
}
.money_btn{
    display: inline-block;
    width: 140rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 10rpx;
    border: solid 1px #999999;
}
.close_win{
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 100;
    width: 94%;
}
.ic_close_logo{
    width: 60rpx;
    height: 60rpx;
}
.detail_box>view + view{
    border-top: 1px solid #e5e5e5;
}