@import '/css/main.wxss';
.search_header{
    height: 60px;
}
.search_img{
    width: 31rpx;
    height: 34rpx;
}
.search_box{
    border: 1px solid #e5e5e5;
    border-radius: 44rpx;
}
.tab_box{
    height: 55px;
}
.swiper-tab {
    display: flex;
    align-items: center;
    width: 100%;
    height: 45px;
    background: #fff;
}

.swiper-tab-list {
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    box-sizing: border-box;
    background:#fff;
    color:#999;
    position: relative;
}
.on {
    color:#ffcc00;
}
.on::after{
    display: inline-block;
    content: '';
    width: 50rpx;
    height: 10rpx;
    background:#ffcc00;
    position: absolute;
    left: 50%;
    margin-left: -25rpx;
    border-radius: 40rpx;
    bottom: 0;
}
.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow-y: scroll;
}
.add_goods_btn{
    width: 130rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 44rpx;
    text-align: center;
}